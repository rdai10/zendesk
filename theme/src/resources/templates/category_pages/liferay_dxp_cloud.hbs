<div class="container-fluid container-fluid-max-xl main-content">
	<div class="row">
		<div class="col-12">
			{{breadcrumbs}}
		</div>
	</div>

	<div class="categories-main row">
		<div class="category-heading col-md-12">
			<h1>
				{{dc 'dxp_cloud-page_heading'}}
			</h1>

			{{#if category.description}}
				<p class="secondary-font secondary-text-color">
					{{category.description}}
				</p>
			{{/if}}
		</div>

		<div class="col-md-12" id="dxpCloudProductPage"></div>
	</div>
</div>

<script>
	Liferay.render(
		Liferay.CardMenu,
		{
			className: 'products-landing',
			configs: [
				{
					description: '{{dc 'dxp_cloud-admin_guide_card_description'}}',
					name: '{{dc '7_1-admin_guide_card'}}',
					svgId: '#admin-guide',
					url: ''
				},
				{
					description: '{{dc 'dxp_cloud-support_coverage_card_description'}}',
					name: '{{dc 'mega_menu-support_coverage'}}',
					svgId: '#support-coverage',
					url: ''
				}
			]
		},
		document.getElementById('dxpCloudProductPage')
	);
</script>